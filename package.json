{
    "name": "gc-theme",
    "version": "1.0.0",
    "description": "a react global theme   manager",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "vite",
        "pack": "npm run build && npm pack && npm publish",
        "build": "rm -rf dist/ && prettier --write src/ && npm run build:esm && npm run build:cjs ",
        "build:esm": "tsc",
        "build:cjs": "tsc --module CommonJs --outDir dist/cjs"
    },
    "author": "Samuel Clinton",
    "license": "MIT",
    "repository": {
        "url": "https://github.com/wcodewiz/gc-theme",
        "type": "project"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.3",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "vite": "^5.0.12"
    }
}
